{
    "manifest_version": 3,
    "name": "Audio Purifier",
    "version": "1.0",
    "description": "Real-time audio suppression and denoising in voice call sessions.",
    "icons": {
        "100": "icon.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "100": "icon.png"
        }
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["utils.js", "content.js"]
    }],
    "web_accessible_resources": [{
      "matches": ["<all_urls>"],
      "resources": ["processor.js"]
    }]
}